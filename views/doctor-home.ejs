<%- include('partials/header') %>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f9fafb;
        margin: 0;
        padding: 0;
    }
    .container {
        max-width: 900px;
        margin: 40px auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        padding: 32px 40px 40px 40px;
        direction: rtl;
    }
    h1 {
        color: #2d3a4b;
        margin-bottom: 10px;
        font-size: 2.2em;
        font-weight: 700;
    }
    h2 {
        color: #4a5a6a;
        margin-bottom: 24px;
        font-size: 1.3em;
        font-weight: 500;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 1px 4px rgba(0,0,0,0.04);
    }
    th, td {
        padding: 14px 12px;
        border-bottom: 1px solid #e5e7eb;
        text-align: right;
    }
    th {
        background: #e3eafc;
        color: #2d3a4b;
        font-weight: 600;
        font-size: 1.05em;
    }
    tr:last-child td {
        border-bottom: none;
    }
    tr:hover td {
        background: #f6f8fa;
        transition: background 0.2s;
    }
    @media (max-width: 700px) {
        .container {
            padding: 16px 4vw;
        }
        th, td {
            padding: 10px 6px;
            font-size: 0.98em;
        }
    }
</style>

<div class="container">
    <h1>שלום, <%= name %>!</h1>
    <h2>רשימת מטופלים</h2>

    <table>
        <thead>
            <tr>
                <th>שם</th>
                <th>גיל</th>
                <th>תעודת זהות</th>
                <th>נרשם בתאריך</th>
            </tr>
        </thead>
        <tbody>
            <% patients.forEach(p => { %>
                <tr>
                    <td><%= p.name %></td>
                    <td><%= p.age %></td>
                    <td><%= p.idNumber %></td>
                    <td><%= new Date(p.createdAt).toLocaleDateString('he-IL') %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('partials/footer') %>
